{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "DATABASE_URL",
    "BETTER_AUTH_SECRET",
    "PASSKEY_RP_ID",
    "PASSKEY_RP_NAME",
    "NEXT_PUBLIC_APP_URL",
    "AWS_ACCESS_KEY_ID",
    "AWS_SECRET_ACCESS_KEY",
    "AWS_BACKEND_ACCOUNT_ID",
    "AWS_PROFILE"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": [
        "DATABASE_URL",
        "BETTER_AUTH_SECRET",
        "PASSKEY_RP_ID",
        "PASSKEY_RP_NAME",
        "NEXT_PUBLIC_APP_URL",
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY",
        "AWS_BACKEND_ACCOUNT_ID"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "cache": false
    },
    "test:coverage": {
      "cache": false,
      "outputs": ["coverage/**"]
    },
    "lint": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "//#check": {},
    "//#fix": {
      "cache": false
    }
  }
}
